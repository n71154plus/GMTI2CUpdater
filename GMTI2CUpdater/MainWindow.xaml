<Window x:Class="GMTI2CUpdater.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GMTI2CUpdater"
        mc:Ignorable="d"
        AllowDrop="True"
        DragOver="Window_DragOver"
        Drop="Window_Drop"
        Title="Global Mixed Technology - I2C更新工具" Height="720" Width="1280">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- I2C 控制列 -->
            <RowDefinition Height="*"/>
            <!-- 3 個 HexView -->
            <RowDefinition Height="Auto"/>
            <!-- Log / 狀態列 -->
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Padding="8" BorderThickness="0,0,0,1" BorderBrush="LightGray">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <!-- I2C 設定 -->
                <TextBlock Text="Adapter：" VerticalAlignment="Center" Margin="0,0,4,0"/>
                <ComboBox Width="Auto" ItemsSource="{Binding AdapterInfos}"
                          DisplayMemberPath="Name"
                          SelectedItem="{Binding SelectedAdapter}"/>

                <TextBlock Text="Device Addr：" Margin="12,0,4,0" VerticalAlignment="Center"/>
                <TextBox Width="Auto" Text="{Binding DeviceAddress}" ToolTip="例如 0x50"/>

                <TextBlock Text="Total Size：" Margin="12,0,4,0" VerticalAlignment="Center"/>
                <TextBlock Width="Auto" Text="{Binding TotalSize}" VerticalAlignment="Center" ToolTip="Total Bytes"/>

                <Separator Margin="12,0" Width="1"/>

                <!-- 主要操作按鈕 -->
                <Button Content="讀取目前資料" Margin="8,0,0,0"
                        Command="{Binding ReadBeforeCommand}"/>
                <Button Content="載入欲更新資料 (HEX)" Margin="4,0,0,0"
                        Command="{Binding LoadHexCommand}"/>
                <Button Content="開始更新" Margin="4,0,0,0"
                        Command="{Binding UpdateCommand}"/>
                <Button Content="更新後回讀" Margin="4,0,0,0"
                        Command="{Binding ReadAfterCommand}"/>
                <Button Content="比對結果" Margin="4,0,0,0"
                        Command="{Binding CompareCommand}"/>
            </StackPanel>
        </Border>
        <!-- Row 1: 三個 HexView -->
        <Grid Grid.Row="1" Margin="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 1. Before -->
            <GroupBox Grid.Column="0" Header="1. 還未執行 Update 前的資料 (Before)" Margin="0,0,4,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- 工具列 -->
                        <RowDefinition Height="*"/>
                        <!-- HexView -->
                    </Grid.RowDefinitions>

                    <!-- 小工具列 -->
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="4">
                            <TextBlock Text="檔案：" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding HexFileName}" Margin="4,0" Width="Auto"
                                   TextTrimming="CharacterEllipsis"/>
                        </StackPanel>
                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="4">
                            <TextBlock Text="CheckSum：" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding BeforeChecksum}" Margin="0,0" Foreground="Blue"/>

                            <TextBlock Text="範圍：" Margin="2,0,0,0" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding BeforeRangeText}" Margin="0,0" Foreground="Blue"/>

                            <CheckBox Content="顯示與Target差異" Margin="2,0,0,0"
                                  IsChecked="{Binding ShowDiffWithTarget}"/>
                        </StackPanel>
                    </Grid>

                    <!-- HexView 控制項（之後自己實作） -->
                    <local:HexViewControl Grid.Row="1"
                                          Data="{Binding BeforeData}"
                                          BaseAddress="{Binding BaseAddress}"
                                          DefinedMap="{Binding BeforeDefinedMap}"
                                          SyncScrollKey="Before"
                                          SyncScrollEnabled="{Binding IsSyncScrollEnabled}"/>
                </Grid>
            </GroupBox>

            <!-- 2. Target (載入 Intel HEX) -->
            <GroupBox Grid.Column="1" Header="2. 我想要變更的資料 (Target / Intel HEX)" Margin="2,0,2,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- 工具列 -->
                        <RowDefinition Height="*"/>
                        <!-- HexView -->
                    </Grid.RowDefinitions>

                    <!-- Target 工具列 -->
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="4">
                            <TextBlock Text="檔案：" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding HexFileName}" Margin="4,0" Width="Auto"
                                   TextTrimming="CharacterEllipsis"/>
                        </StackPanel>
                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="4">
                            <TextBlock Text="CheckSum：" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding TargetChecksum}" Margin="0,0" Foreground="Blue"/>

                            <TextBlock Text="範圍：" Margin="2,0,0,0" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding TargetRangeText}" Margin="0,0" Foreground="Blue"/>

                            <CheckBox Content="顯示與Before差異" Margin="2,0,0,0"
                                  IsChecked="{Binding ShowDiffWithBefore}"/>
                        </StackPanel>
                    </Grid>
                    <!-- HexView -->
                    <local:HexViewControl Grid.Row="1"
                                          Data="{Binding TargetData}"
                                          BaseAddress="{Binding BaseAddress}"
                                          DefinedMap="{Binding TargetDefinedMap}"
                                          HighlightDiffSource="{Binding BeforeData}"
                                          ShowDiff="{Binding ShowDiffWithBefore}"
                                          SyncScrollKey="Target"
                                          SyncScrollEnabled="{Binding IsSyncScrollEnabled}"/>
                </Grid>
            </GroupBox>

            <!-- 3. After -->
            <GroupBox Grid.Column="2" Header="3. 執行 Update 後回讀的資料 (After)" Margin="4,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- 工具列 -->
                        <RowDefinition Height="*"/>
                        <!-- HexView -->
                    </Grid.RowDefinitions>

                    <!-- 小工具列 -->
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="4">
                            <TextBlock Text="檔案：" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding HexFileName}" Margin="4,0" Width="Auto"
                                   TextTrimming="CharacterEllipsis"/>
                        </StackPanel>
                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="4">
                            <TextBlock Text="CheckSum：" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding AfterChecksum}" Margin="0,0" Foreground="Blue"/>

                            <TextBlock Text="範圍：" Margin="2,0,0,0" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding AfterRangeText}" Margin="0,0" Foreground="Blue"/>

                            <CheckBox Content="顯示與Target差異" Margin="2,0,0,0"
                                  IsChecked="{Binding ShowDiffWithTarget}"/>
                        </StackPanel>
                    </Grid>
                    <!-- HexView -->
                    <local:HexViewControl Grid.Row="1"
                                          Data="{Binding AfterData}"
                                          BaseAddress="{Binding BaseAddress}"
                                          DefinedMap="{Binding AfterDefinedMap}"
                                          HighlightDiffSource="{Binding TargetData}"
                                          ShowDiff="{Binding ShowDiffWithTarget}"
                                          SyncScrollKey="After"
                                          SyncScrollEnabled="{Binding IsSyncScrollEnabled}"/>
                </Grid>
            </GroupBox>
        </Grid>
        <Grid Grid.Row="2" MinHeight="250">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <!-- Log -->
                <RowDefinition Height="Auto"/>
                <!-- StatusBar -->
            </Grid.RowDefinitions>

            <GroupBox Grid.Row="0" Header="操作記錄 (Log)" Margin="8,0,8,4">
                <DockPanel>
                    <Button Content="清除" DockPanel.Dock="Top" Margin="0,0,0,4"
                            Command="{Binding ClearLogCommand}"/>
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding LogItems}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" Margin="2,0"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </DockPanel>
            </GroupBox>

            <StatusBar Grid.Row="1">
                <StatusBarItem Content="{Binding I2CStatusText}"/>
                <StatusBarItem>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="進度：" Margin="0,0,4,0"/>
                        <ProgressBar Width="150" Height="12"
                                     Minimum="0" Maximum="100"
                                     Value="{Binding Progress}"/>
                    </StackPanel>
                </StatusBarItem>
                <StatusBarItem Content="{Binding StatusMessage}"/>
            </StatusBar>
        </Grid>
    </Grid>
</Window>
